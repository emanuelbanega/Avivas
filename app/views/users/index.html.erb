<h2>Usuarios</h2>
<%= link_to 'Añadir Usuario', new_user_path %>
<table class="product-table">
    <thead>
        <tr>
            <th>Usuario</th>
            <th>Correo</th>
            <th>Teléfono</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do | user | %>
            <tr>
                <td><%= user.username %></td>
                <td><%= user.email %></td>
                <td><%= user.phone %></td>
                <td>
                    <%= link_to 'Detalle', user_path(user), class: 'btn detail-btn' %>
                    <%= link_to 'Modificar', edit_user_path(user), class: 'btn modify-btn' %>
                    <%= link_to 'Eliminar', user_path(user), data: { turbo_method: :delete, turbo_confirm: '¿Estas seguro que quieres eliminar el usuario?'}, class: 'btn delete-btn' %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>