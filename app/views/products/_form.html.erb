<%= @product.errors.full_messages.each do | error | %>
        <div>
            <%= error %>
        </div>
<% end %>
<%= form_with model: @product do |form| %>
    <div>
        <%= form.label :name, "Nombre" %>
        <%= form.text_field :name %>
    </div>
    <div>
        <%= form.label :description, "Descripción" %>
        <%= form.text_area :description %>
    </div>
    <div>
        <%= form.label :unit_price, "Precio Unitario" %>
        <%= form.number_field :unit_price, step: "0.01" %>
    </div>
    <div>
        <%= form.label :stock, "Stock" %>
        <%= form.number_field :stock %>
    </div>
    <div> 
        <%= form.label :category, "Categoria" %>
        <%= form.text_field :category %>
    </div>
    <div>
        <%= form.label :size, "Tamaño" %>
        <%= form.text_field :size %>
    </div>
    <div>
        <%= form.label :color, "Color" %>
        <%= form.text_field :color %>
    </div>
    <div class="button-group">
        <%= form.submit "Guardar Producto", class: 'btn save-btn' %>
        <%= link_to 'Cancelar', products_path, class: 'btn cancel-btn' %>
    </div>
<% end %>